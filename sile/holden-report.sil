}

\define[command=needspace]{
  \skip[height=0pt plus 3in]
  \break
  \skip[height=0pt plus -3in]
}

\define[command=sectiontitle]{
  \needspace
  \font[family=JetBrains Mono, weight=700, size=14pt]{\Ink{\process}}
  \nobreak
  \skip[height=.25em]
  \nobreak
}

% Simple section box wrapper
\define[command=sectionbox]{
  \skip[height=0.25em]
  \process
  \skip[height=0.25em]
  \break
}

